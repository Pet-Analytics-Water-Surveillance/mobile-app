{
  "expo": {
    "name": "PAWS",
    "slug": "paws-water-monitor",
    "version": "0.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "paws",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.teampaws.hydrationmonitor",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "PAWS needs Bluetooth to connect to your pet hydration monitoring device and track water consumption in real-time.",
        "NSBluetoothPeripheralUsageDescription": "PAWS needs Bluetooth to discover and setup your pet hydration monitoring device.",
        "NSLocationWhenInUseUsageDescription": "Location is required for Bluetooth device discovery and setup of your pet monitoring system.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Location is required for Bluetooth device discovery and setup of your pet monitoring system.",
        "NSCameraUsageDescription": "PAWS needs camera access to take photos of your pets for their profiles.",
        "NSPhotoLibraryUsageDescription": "PAWS needs photo library access to select photos for your pet profiles.",
        "NSPhotoLibraryAddUsageDescription": "PAWS needs access to save photos to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.tribui1912.pawswatermonitor",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "paws-app.com"
            },
            {
              "scheme": "paws"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ],
      "usesCleartextTraffic": false,
      "allowBackup": true,
      "targetSdkVersion": 34
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "PAWS needs access to your photo library to select photos for your pet profiles."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Location is required for Bluetooth device discovery and setup."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d9716a15-e0e3-44c9-a438-9bc018e87bd5"
      },
      "supabaseUrl": "PLACEHOLDER_URL",
      "supabaseAnonKey": "PLACEHOLDER_KEY"
    },
    "owner": "tribui1912",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/d9716a15-e0e3-44c9-a438-9bc018e87bd5"
    }
  }
}
